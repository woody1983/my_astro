---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="min-h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-lg max-w-md w-full">
      <h1 class="text-3xl font-bold text-gray-800 mb-4">
        Tailwind CSS Test
      </h1>
      <p class="text-gray-600 mb-6">
        If you see styled content, Tailwind is working!
      </p>
      
      <div class="space-y-3">
        <button class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded transition-colors">
          Primary Button
        </button>
        
        <button class="w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded transition-colors">
          Success Button
        </button>
        
        <div class="flex gap-2">
          <span class="px-3 py-1 bg-red-100 text-red-800 rounded-full text-sm">Badge 1</span>
          <span class="px-3 py-1 bg-yellow-100 text-yellow-800 rounded-full text-sm">Badge 2</span>
          <span class="px-3 py-1 bg-purple-100 text-purple-800 rounded-full text-sm">Badge 3</span>
        </div>
      </div>
      
      <div class="mt-6 p-4 bg-gray-100 rounded">
        <p class="text-sm text-gray-700">
          <strong>Test utilities:</strong>
        </p>
        <ul class="list-disc list-inside text-sm text-gray-600 mt-2">
          <li>Flexbox centering ✓</li>
          <li>Card with shadow ✓</li>
          <li>Typography styles ✓</li>
          <li>Color utilities ✓</li>
          <li>Hover states ✓</li>
          <li>Rounded corners ✓</li>
        </ul>
      </div>
    </div>
  </div>
</Layout>
