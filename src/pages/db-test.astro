---
import Layout from '../layouts/Layout.astro';
---

<Layout title="D1 Database Test Page">
  <div class="min-h-screen bg-gradient-to-br from-indigo-900 via-purple-900 to-pink-800 flex items-center justify-center p-8">
    <div class="flex flex-col md:flex-row gap-8 max-w-6xl w-full">
      
      <!-- Users Card -->
      <div class="glass-card breathing flex-1">
        <div class="card-header">
          <h2 class="card-title">Users List</h2>
          <p class="card-subtitle">Registered members</p>
        </div>
        <div class="card-body">
          <div id="users-container">
            <div class="skeleton-list">
              <div class="skeleton-item"></div>
              <div class="skeleton-item"></div>
              <div class="skeleton-item"></div>
            </div>
          </div>
        </div>
        <div class="shine"></div>
      </div>

      <!-- Posts Card -->
      <div class="glass-card breathing flex-1" style="animation-delay: 1.5s">
        <div class="card-header">
          <h2 class="card-title">Posts List</h2>
          <p class="card-subtitle">Latest articles</p>
        </div>
        <div class="card-body">
          <div id="posts-container">
            <div class="skeleton-list">
              <div class="skeleton-item"></div>
              <div class="skeleton-item"></div>
              <div class="skeleton-item"></div>
            </div>
          </div>
        </div>
        <div class="shine"></div>
      </div>

      <!-- Tech Stack Card -->
      <div class="glass-card breathing flex-1" style="animation-delay: 3s">
        <div class="card-header">
          <h2 class="card-title">Tech Stack</h2>
          <p class="card-subtitle">Built with</p>
        </div>
        <div class="card-body">
          <div class="tech-list">
            <div class="tech-item">
              <span class="tech-icon">üöÄ</span>
              <div class="tech-info">
                <div class="tech-name">Astro</div>
                <div class="tech-desc">Web Framework</div>
              </div>
            </div>
            
            <div class="tech-item">
              <span class="tech-icon">‚ö°</span>
              <div class="tech-info">
                <div class="tech-name">Tailwind CSS</div>
                <div class="tech-desc">Styling</div>
              </div>
            </div>
            
            <div class="tech-item">
              <span class="tech-icon">üóÑÔ∏è</span>
              <div class="tech-info">
                <div class="tech-name">Drizzle ORM</div>
                <div class="tech-desc">Database</div>
              </div>
            </div>
            
            <div class="tech-item">
              <span class="tech-icon">‚òÅÔ∏è</span>
              <div class="tech-info">
                <div class="tech-name">Cloudflare D1</div>
                <div class="tech-desc">Edge Database</div>
              </div>
            </div>
            
            <div class="tech-item">
              <span class="tech-icon">üì¶</span>
              <div class="tech-info">
                <div class="tech-name">TypeScript</div>
                <div class="tech-desc">Language</div>
              </div>
            </div>
          </div>
        </div>
        <div class="shine"></div>
      </div>

    </div>
  </div>
</Layout>

<script>
  // Emoji avatars for users
  const userEmojis = ['üë©‚Äçüíº', 'üë®‚Äçüíª', 'üë©‚Äçüé®', 'üë®‚Äçüî¨', 'üë©‚Äç‚úàÔ∏è', 'üë®‚Äçüç≥', 'üë©‚Äçüè´', 'üë®‚Äçüé§'];
  
  async function loadUsers() {
    try {
      const response = await fetch('/api/get-users');
      const data = await response.json();
      
      const container = document.getElementById('users-container');
      if (data.success && data.users.length > 0) {
        container.innerHTML = `
          <div class="user-list">
            ${data.users.map((user: any, index: number) => `
              <div class="user-item">
                <span class="user-icon">${userEmojis[index % userEmojis.length]}</span>
                <div class="user-info">
                  <div class="user-name">${user.name}</div>
                  <div class="user-email">${user.email}</div>
                </div>
              </div>
            `).join('')}
          </div>
        `;
      } else {
        container.innerHTML = '<div class="empty-state"><div class="empty-icon">üë§</div><p>No users found</p></div>';
      }
    } catch (error) {
      container.innerHTML = `<div class="error-state"><div class="error-icon">‚ö†Ô∏è</div><p>Failed to load users</p></div>`;
    }
  }

  async function loadPosts() {
    try {
      const response = await fetch('/api/get-posts');
      const data = await response.json();
      
      const container = document.getElementById('posts-container');
      if (data.success && data.posts.length > 0) {
        container.innerHTML = `
          <div class="stats-bar">
            <span class="stats-number">${data.posts.length}</span>
            <span class="stats-label">Total Posts</span>
          </div>
          <ul class="post-list">
            ${data.posts.map((post: any) => `
              <li class="post-item">
                <div class="post-number">#${post.id}</div>
                <div class="post-content-wrapper">
                  <h3 class="post-title">${post.title}</h3>
                  <p class="post-excerpt">${post.content.substring(0, 80)}${post.content.length > 80 ? '...' : ''}</p>
                  <div class="post-meta">
                    <span class="post-author">By Author #${post.authorId}</span>
                    <span class="post-date">${new Date(post.createdAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</span>
                  </div>
                </div>
              </li>
            `).join('')}
          </ul>
        `;
      } else {
        container.innerHTML = '<div class="empty-state"><div class="empty-icon">üìù</div><p>No posts found</p></div>';
      }
    } catch (error) {
      container.innerHTML = `<div class="error-state"><div class="error-icon">‚ö†Ô∏è</div><p>Failed to load posts</p></div>`;
    }
  }

  loadUsers();
  loadPosts();
</script>

<style>
  /* Base Card Styles */
  .glass-card {
    position: relative;
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(20px);
    border-radius: 24px;
    border: 1px solid rgba(255, 255, 255, 0.15);
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    min-height: 480px;
  }

  .glass-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 
      0 25px 50px -12px rgba(0, 0, 0, 0.4),
      0 0 0 1px rgba(255, 255, 255, 0.1);
  }

  .breathing {
    animation: breathe 4s ease-in-out infinite;
  }

  @keyframes breathe {
    0%, 100% {
      box-shadow: 
        0 0 30px rgba(255, 255, 255, 0.05),
        inset 0 0 30px rgba(255, 255, 255, 0.05);
    }
    50% {
      box-shadow: 
        0 0 50px rgba(255, 255, 255, 0.15),
        inset 0 0 40px rgba(255, 255, 255, 0.1);
    }
  }

  /* Card Header */
  .card-header {
    padding: 1.75rem 1.75rem 1rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    background: linear-gradient(180deg, rgba(255,255,255,0.05) 0%, transparent 100%);
  }

  .card-title {
    font-size: 1.75rem;
    font-weight: 800;
    color: white;
    text-align: center;
    letter-spacing: -0.025em;
    margin-bottom: 0.25rem;
    background: linear-gradient(135deg, #fff 0%, rgba(255,255,255,0.8) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .card-subtitle {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    text-align: center;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  /* Card Body */
  .card-body {
    padding: 1.25rem 1.5rem 1.5rem;
    max-height: 420px;
    overflow-y: auto;
  }

  .card-body::-webkit-scrollbar {
    width: 6px;
  }

  .card-body::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 3px;
  }

  .card-body::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 3px;
  }

  /* Stats Bar */
  .stats-bar {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    margin-bottom: 1.25rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .stats-number {
    font-size: 2rem;
    font-weight: 800;
    color: white;
    line-height: 1;
  }

  .stats-label {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
    font-weight: 500;
  }

  /* User List Styles - Match Tech Stack */
  .user-list {
    display: flex;
    flex-direction: column;
    gap: 0.875rem;
  }

  .user-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.125rem;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 14px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    transition: all 0.3s ease;
  }

  .user-item:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.15);
    transform: translateX(4px);
  }

  .user-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .user-info {
    flex: 1;
  }

  .user-name {
    font-size: 1rem;
    font-weight: 700;
    color: white;
    margin-bottom: 0.125rem;
  }

  .user-email {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.5);
    font-weight: 500;
  }

  .user-date {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.4);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Post List Styles */
  .post-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .post-item {
    display: flex;
    gap: 1rem;
    padding: 1.125rem;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    transition: all 0.3s ease;
  }

  .post-item:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.15);
    transform: translateX(4px);
  }

  .post-number {
    font-size: 0.875rem;
    font-weight: 800;
    color: rgba(255, 255, 255, 0.3);
    font-family: monospace;
    padding-top: 0.25rem;
  }

  .post-content-wrapper {
    flex: 1;
    min-width: 0;
  }

  .post-title {
    font-size: 1.05rem;
    font-weight: 700;
    color: white;
    margin-bottom: 0.5rem;
    line-height: 1.4;
    letter-spacing: -0.01em;
  }

  .post-excerpt {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.5;
    margin-bottom: 0.75rem;
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.4);
  }

  .post-author {
    font-weight: 500;
  }

  .post-date {
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Empty & Error States */
  .empty-state, .error-state {
    text-align: center;
    padding: 3rem 1.5rem;
  }

  .empty-icon, .error-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    opacity: 0.5;
  }

  .empty-state p, .error-state p {
    color: rgba(255, 255, 255, 0.5);
    font-size: 1rem;
  }

  /* Skeleton Loading */
  .skeleton-list {
    display: flex;
    flex-direction: column;
    gap: 0.875rem;
  }

  .skeleton-item {
    height: 80px;
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0.03) 25%,
      rgba(255, 255, 255, 0.08) 50%,
      rgba(255, 255, 255, 0.03) 75%
    );
    background-size: 200% 100%;
    border-radius: 16px;
    animation: shimmer 1.5s infinite;
  }

  @keyframes shimmer {
    0% { background-position: 200% 0; }
    100% { background-position: -200% 0; }
  }

  /* Shine Effect */
  .shine {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
      45deg,
      transparent 30%,
      rgba(255, 255, 255, 0.1) 50%,
      transparent 70%
    );
    transform: rotate(45deg);
    opacity: 0;
    pointer-events: none;
  }

  .glass-card:hover .shine {
    animation: shine 0.6s ease-in-out;
  }

  @keyframes shine {
    0% {
      transform: translateX(-100%) translateY(-100%) rotate(45deg);
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
    100% {
      transform: translateX(100%) translateY(100%) rotate(45deg);
      opacity: 0;
    }
  }

  /* Tech Stack Styles */
  .tech-list {
    display: flex;
    flex-direction: column;
    gap: 0.875rem;
  }

  .tech-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.125rem;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 14px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    transition: all 0.3s ease;
  }

  .tech-item:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.15);
    transform: translateX(4px);
  }

  .tech-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .tech-info {
    flex: 1;
  }

  .tech-name {
    font-size: 1rem;
    font-weight: 700;
    color: white;
    margin-bottom: 0.125rem;
  }

  .tech-desc {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.5);
    font-weight: 500;
  }
</style>
