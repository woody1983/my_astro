  async function loadUsers() {
    const container = document.getElementById('users-container');
    if (!container) return;
    
    try {
      const response = await fetch('/api/get-users');
      const data = await response.json();
      
      if (data.success && data.users.length > 0) {
        let html = '<div class="tech-list">';
        data.users.forEach((user, index) => {
          html += '<div class="tech-item">';
          html += '<span class="tech-icon">' + userEmojis[index % userEmojis.length] + '</span>';
          html += '<div class="tech-info">';
          html += '<div class="tech-name">' + user.name + '</div>';
          html += '<div class="tech-desc">' + user.email + '</div>';
          html += '</div></div>';
        });
        html += '</div>';
        container.innerHTML = html;
      } else {
        container.innerHTML = '<div class="empty-box"><span class="empty-emoji">üë§</span><p>No users found</p></div>';
      }
    } catch (error) {
      container.innerHTML = '<div class="error-box"><span class="error-emoji">‚ö†Ô∏è</span><p>Failed to load</p></div>';
    }
  }

  async function loadPosts() {
    const container = document.getElementById('posts-container');
    if (!container) return;
    
    try {
      const response = await fetch('/api/get-posts');
      const data = await response.json();
      
      if (data.success && data.posts.length > 0) {
        container.innerHTML = `
          <div class="tech-list">
            ${data.posts.map((post, index) => `
              <div class="tech-item">
                <span class="tech-icon">${postEmojis[index % postEmojis.length]}</span>
                <div class="tech-info">
                  <div class="tech-name">${post.title}</div>
                  <div class="tech-desc">By Author #${post.authorId}</div>
                </div>
              </div>
            `).join('')}
          </div>
        `;
      } else {
        container.innerHTML = '<div class="empty-box"><span class="empty-emoji">üìù</span><p>No posts found</p></div>';
      }
    } catch (error) {
